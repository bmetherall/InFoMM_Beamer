\mode<presentation>
\RequirePackage{tikz}
\RequirePackage{graphicx}
\RequirePackage{calc}
\def\leftcol{0.065\paperwidth}
\def\colpadd{0.1*\leftcol}
\setbeamersize{sidebar width left=\leftcol}
\setbeamertemplate{left bar}{}
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{background}{
    \begin{tikzpicture}
    \useasboundingbox (0,0) rectangle(\paperwidth,\paperheight);
    \fill[color=oxblue] (0,0) rectangle(\leftcol,\paperheight);
    \shade[left color=shadeblue,right color=white] (\leftcol,\paperheight-\leftcol) rectangle(\paperwidth,\paperheight);
    \node[anchor= west, white, rotate=90] at (0.5*\leftcol,\colpadd){\usebeamerfont{leftbar}Mathematical Institute};
    \node[anchor= east, white, rotate=90] at (0.5*\leftcol,\paperheight-\colpadd){\usebeamerfont{leftbar}University of Oxford};
    \node[anchor=east] at (\paperwidth,\paperheight-0.5*\leftcol){\includegraphics[height=\leftcol, keepaspectratio]{InFoMM}};
    \end{tikzpicture}}
\setbeamertemplate{footline}{
    \begin{beamercolorbox}[ht=4mm,center]{footline}
    \begin{tikzpicture}
    \useasboundingbox (0,0) rectangle(\paperwidth,\paperheight);
    \draw[oxblue, thin] (\leftcol+\colpadd,4mm) -- (\paperwidth-\colpadd,4mm);
    \node[anchor=center] at (\leftcol+0.5*\paperwidth-0.5*\leftcol,2mm){\usebeamerfont{footline}EPSRC Centre for Doctoral Training in Industrially Focused Mathematical Modelling};%
    \end{tikzpicture}
    \end{beamercolorbox}}
\setbeamertemplate{frametitle}{
    \begin{beamercolorbox}[ht=\leftcol]{frametitle}
    \vbox to\leftcol{\vfil\hbox{\usebeamerfont{title}\insertframetitle}\vfil}
    \end{beamercolorbox}}
